{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "lib",
    "types": ["node"],
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es5",
      "es2015.collection",
      "es2015.iterable",
      "es2015.promise",
      "dom",
      "dom.iterable"
    ],
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "lib"]
}
